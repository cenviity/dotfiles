{{- if contains "DSDU" .chezmoi.hostname -}}
# Add Brew to $PATH
eval "$({{ output "which" "brew" | trim }} shellenv)"
{{- end }}

# Initiate pyenv
if type -q pyenv
    pyenv init - | source
end

set -gx PYENV_ROOT {{ .home }}/.pyenv
set -gx VISUAL "code --wait"

if status is-interactive
    # Commands to run in interactive sessions can go here

    # Initiate atuin
    if type -q atuin
        set -gx ATUIN_NOBIND "true"
        atuin init fish | source

        # atuin: Bind to ctrl-r in normal and insert mode, add any other bindings you want here too
        bind \cr _atuin_search
        bind -M insert \cr _atuin_search
    end

    # Initiate zoxide
    if type -q zoxide
        set -gx _ZO_ECHO 1 # Print the matched directory before navigating to it
        zoxide init fish | source
    end

    # Customise shell prompt
    oh-my-posh init fish --config '~/.mytheme.omp.json' | source
end
